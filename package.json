{
  "name": "game-app",
  "version": "1.0.0",
  "description": "Game Club Management Application",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd backend && ./mvnw spring-boot:run",
    "dev:frontend": "cd client && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && ./mvnw clean package -DskipTests",
    "build:frontend": "cd client && npm run build",
    "start": "npm run start:backend",
    "start:backend": "cd backend && java -jar target/*.jar",
    "start:frontend": "cd client && npm run preview"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "client"
  ]
}
